#!/bin/bash

<%- gpu = context.buddy_queue.include?("gpu") -%>

# Cleanup any loaded modules
module purge

# Set working directory
cd "${HOME}"

# Launch Xfce Window Manager and Panel

(
  set -x
  module restore
  export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
  export XDG_CACHE_HOME="$(mktemp -d)"
  export $(dbus-launch)
  xfwm4 --compositor=off --sm-client-disable &
  xsetroot -solid "#D3D3D3"
  xfsettingsd --sm-client-disable &
  xfce4-panel --sm-client-disable &
) &


source /etc/os-release

#
# Start VMD
#

# Clear current modules and load the requested version
module purge

module load VirtualGL <%= context.version %>

# Additional modules
<%- unless context.modules.blank? -%> 
# Load additional requested modules
module load <%= context.modules %>

<%- end -%>

# List loaded modules
module list

sleep 5

echo $SESSION_MANAGER

# Launch VMD
<%- if gpu -%>
set -x
xfce4-terminal -e "vglrun vmd" -T "VMD Terminal" --disable-server
<%- else -%>
set -x
xfce4-terminal -e "vglrun vmd" -T "VMD Terminal" --disable-server
<%- end -%>
